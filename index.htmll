<body>
    <header>
        <h1>DARK JUMIA</h1>
        <p>Your professional black-market-style marketplace experience</p>
    </header>

    <div class="container">
        <button class="btn" onclick="loadProducts()">Load Products</button>

        <div class="grid" id="productGrid">
            <!-- Products appear here -->
        </div>
    </div>

    <script>
        async function loadProducts() {
            const grid = document.getElementById("productGrid");
            grid.innerHTML = "<p>Loading...</p>";

            try {
                const res = await fetch("http://localhost:8080/api/products");
                const data = await res.json();

                grid.innerHTML = "";

                data.forEach(product => {
                    const div = document.createElement("div");
                    div.className = "item";

                    div.innerHTML = `
                        <img src="${product.image || 'https://via.placeholder.com/250'}" />
                        <div class="item-title">${product.title}</div>
                        <div class="price">KES ${product.price || '---'}</div>
                    `;

                    grid.appendChild(div);
                });

            } catch (error) {
                grid.innerHTML = "<p style='color:red;'>Failed to fetch products.</p>";
            }
        }
    </script>
