#include "crow.h"
#include <nlohmann/json.hpp>
#include <httplib.h> // or use cpr/curl; show example with httplib

using json = nlohmann::json;
std::vector<json> PRODUCTS_CACHE;

void fetch_products_from_cms() {
    // Example: call a headless CMS REST endpoint that returns JSON array of products
    httplib::Client cli("https://cms.example.com");
    auto res = cli.Get("/api/products?published=true");
    if (res && res->status == 200) {
        try {
            json arr = json::parse(res->body);
            PRODUCTS_CACHE.clear();
            for (auto &p : arr) PRODUCTS_CACHE.push_back(p);
            CROW_LOG_INFO << "Fetched " << PRODUCTS_CACHE.size() << " products from CMS";
        } catch (...) {
            CROW_LOG_ERROR << "Failed parsing CMS response";
        }
    } else {
        CROW_LOG_ERROR << "Failed to fetch CMS products";
    }
}

int main()
{
    crow::SimpleApp app;

    // basic route to list products
    CROW_ROUTE(app, "/api/products")
    ([](){
        json out = json::array();
        for (auto &p : PRODUCTS_CACHE) out.push_back(p);
        crow::response res;
        res.set_header("Content-Type", "application/json");
        res.write(out.dump());
        return res;
    });

    // create order (simple skeleton)
    CROW_ROUTE(app, "/api/orders").methods("POST"_method)
    ([](const crow::request& req){
        try {
            auto body = json::parse(req.body);
            // body should contain: user (or guest), items = [{product_id, qty}]
            // Validate, compute total, create DB order, call payment provider...
            json resp = {{"status","created"}, {"order_id", "ord12345"}};
            return crow::response{resp.dump()};
        } catch (...) {
            return crow::response(400, "{\"error\":\"bad request\"}");
        }
    });

    // simple admin-only route to trigger CMS sync (in production use webhook + auth)
    CROW_ROUTE(app, "/admin/sync").methods("POST"_method)
    ([](){
        fetch_products_from_cms();
        return crow::response(200, "{\"ok\":true}");
    });

    // initial fetch (blocking) - in prod spawn worker thread
    fetch_products_from_cms();

    app.port(8080).multithreaded().run();
}
